@{
    var myTitle = "Import Timesheet";
    ViewBag.Title = @myTitle;
    var result = ViewData["Result"] as string;
}

@section css {
    <link rel="stylesheet" href="~/lib/bootstrap-fileinput/css/fileinput.min.css" />
}

@section scripts {
    <script type="text/javascript" src="~/lib/bootstrap-fileinput/js/plugins/canvas-to-blob.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-fileinput/js/fileinput.min.js"></script>
}

<div class="row">
    <div class="page-header">
        <h1>@myTitle</h1>
    </div>
</div>

<div class="row" id="messageContainer">
</div>


<div class="row">
    <form method="post" action="~/Import/ImportTimesheet">
        <div class="row">
            <div class="form-group col-md-12">
                <label for="data">Import Data (json array format)</label>
                <textarea name="data" id="data" rows="30" class="form-control" data-validation="required"></textarea>
            </div>
            <div class="form-group col-md-3">
                <label for="result">Result</label>
                <textarea name="result" id="result" rows="25" class="form-control">@result</textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="pull-right">
                    <button type="submit" class="btn btn-default">Submit</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                </div>
            </div>
        </div>
    </form>
</div>